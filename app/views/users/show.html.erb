<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Microposts:</strong>
    <table>
      <thead>
        <tr>
          <th>Post</th>
          <th>Created at</th>
          <th>Updated at</th>
        </tr>
      </thead>

      <tbody>
      <% @user.microposts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.created_at %></td>
          <td><%= post.updated_at %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
